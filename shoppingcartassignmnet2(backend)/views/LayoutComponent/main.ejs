<head>
    <style>
        body{
            margin: 0%;
            padding: 0%;
        }
        .container1{
            width: 100%;
            height: 86.5%;
            padding: 2%;
        }
        
    </style>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    </head>
  
          
          
       
    <body>
     <%- include('header') %>
     
    <div class="container1">
        
        <table class="table" style="margin-top: 2%;">
            <thead class="thead-dark">
              <tr>
                <th scope="col">id</th>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
                <th scope="col"></th>
                <th scope="col"><button class="btn btn-success" ><a href="/admin/addProductPage" style="
                    color: white;
            text-decoration: none;">AddProduct</a></button></th>
              </tr>
            </thead>
            <tbody>
        <% productList.forEach(product=>{%>
     
            <tr>
                <th scope="row"><%= product._id %></th>
                <td><%= product.title %></td>
                <td><%= product.price %></td>
                <td><%= product.description %></td>
                <td><button class="btn btn-warning"><a href="/admin/EditProductPage/?id=<%=product._id%>" style="
                    color: black;
            text-decoration: none;
                ">Edit</a></button></td>
                <td><button class="btn btn-danger" ><a href="/admin/deleteProduct/?id=<%=product._id%>" style="
                    color: white;
            text-decoration: none;
                ">Delete</a></button></td>
              </tr>
        <%})
        %>
    </tbody>
</table>
    
    </div>
   
    
    
    </body>
    
    